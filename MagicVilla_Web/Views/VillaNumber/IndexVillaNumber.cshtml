@using MagicVilla_Web.Models.DTO
@model List<VillaNumberDTO>

<div class="container p-4 border">
    <div class="row pb-2">
        <h1 class="text-primary">Villa List</h1>
    </div>
    <div class=" col text-end pt-1">
        <a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class=" btn btn-outline-primary"><i class="bi bi-file-plus-fill"></i> Create New Villa Number</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Villa Name
                </th>
                <th>
                    Villa Number
                </th>
                <th>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Villa.Name</td>
                    <td>@item.VillaNo</td>
                    <td>
                        <a asp-controller="VillaNumber" asp-action="UpdateVillaNumber" asp-route-villaNo="@item.VillaNo" class=" btn btn-success"><i class="bi bi-pencil-square"></i> Update</a>
                        <a asp-controller="VillaNumber" asp-action="DeleteVillaNumber" asp-route-villaNo="@item.VillaNo" class=" btn btn-danger"><i class="bi bi-file-x-fill"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>